<p id="notice"><%= notice %></p>

<h1>Pictures</h1>
<% @pictures.each do |picture| %>
  <div class="row no-gutters">
	  <div class="col-md-3">
		  <div class ="card mt-1 mb-2 mx" >
			  <div class="card-body"></div>
				  <div class="card-image">
						<%= image_tag picture.image_url, id: "indeximage" %> 
				  </div>
				  <div class="caption">
						<p><%= picture.user.name %></p>
						<div id="posttitle">
							<%= render 'titles/form', title: @title %>
						</div>
						<p class="btn btn-link btn-sm">
							<%= link_to 'Show', picture %>
						</p>
				  </div>
			  </div>
		  </div>
	  </div>			
  </div>
				
 
  <br>
  
<% end %>
<%= link_to 'New Picture', new_picture_path %>
